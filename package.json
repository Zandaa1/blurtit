{
  "name": "blurtit",
  "version": "1.0.0",
  "description": "Blurt It! - Social sharing app",
  "scripts": {
    "build-css": "tailwindcss -i css/style.css -o css/output.css",
    "build-css:prod": "tailwindcss -i css/style.css -o css/output.css --minify",
    "watch-css": "tailwindcss -i css/style.css -o css/output.css --watch",
    "dev": "npm run watch-css",
    "build": "npm run build-css:prod"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "tailwindcss": "^4.1.13"
  }
}
